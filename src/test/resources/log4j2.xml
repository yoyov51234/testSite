<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" monitorInterval="30">

    <!-- 定义日志文件目录 -->
    <Properties>
        <Property name="LOG_DIR">logs</Property>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
    </Properties>

    <!-- Appenders：日志输出方式 -->
    <Appenders>

        <!-- 控制台输出 -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <!-- 滚动文件策略：每天生成一个新文件 -->
        <RollingFile name="FileLogger"
                     fileName="${LOG_DIR}/framework.log"
                     filePattern="${LOG_DIR}/framework-%d{yyyy-MM-dd}-%i.log">

            <PatternLayout pattern="${LOG_PATTERN}"/>

            <Policies>
                <!-- 每天滚动一次 -->
                <TimeBasedTriggeringPolicy interval="1"/>
                <!-- 文件超过 10MB 后切分 -->
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>

            <!-- 最多保留 10 个历史文件 -->
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

    </Appenders>

    <!-- Loggers：不同 level、不同 logger -->
    <Loggers>

        <!-- Selenium Page Objects、Framework 使用的 logger -->
        <Logger name="framework" level="info" additivity="false">
            <AppenderRef ref="FileLogger"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Root logger（所有未定义的 logger 都走这里） -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Root>

    </Loggers>

</Configuration>
